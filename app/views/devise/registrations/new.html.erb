<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

 <div class="form-group">
    <%= f.email_field :email, autofocus: true, :class => "form-control", :id => 'exampleInputEmail1', :placeholder => "email@example.com" %>
  </div>
  <div class="field">   
    <%= f.password_field :password, autocomplete: "off", :class => "form-control", :id => 'exampleInputPassword1', :placeholder => "Password" %>
  </div>
  <br>
  <div class="field">
   <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", :id => 'exampleInputPassword1', :placeholder => "Password Confirmation" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Sign Up", :class => "btn btn-primary" %>
  </div>
<% end %>
